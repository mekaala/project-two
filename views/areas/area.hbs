<main>

    <a href="/areas/{{ area.name }}">Return to {{ area.name }}</a><br/>


	<div class = "area-show-page">

		<h2>

			{{ area.place }}

		</h2>

        <h3>

            {{ area.region }}

        </h3>

        <h4> 

            {{ area.description }}

        </h4>

        <p>

            {{ area.rules }}

        </p>

        <img src="{{ area.img }}"/>

        <p class="cite">{{ area.imgSource }}</p>

        <ul>

            {{#each photo }}

                <li>

                        {{ img }}<br/>
			                    
                </li>

            {{/each }}

        </ul>

        <div class="region-footer">

            <a href="/areas/area/{{ area.id }}/edit">Edit Area</a><br/>
            
            <a href="/areas/area/photo/new">Add New Photo</a><br/>

            <form class="delete" action="/areas/area/{{ area.id }}?_method=DELETE" method="POST">
                <button type="submit">Delete Area</button>
            </form>

        </div>

	</div>

</main>